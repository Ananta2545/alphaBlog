<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index1.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap">

    <title>Blog</title>
</head>
<body class="fade-in">
    <section class="home">
    <h1>Welcome to  alphaBlogs</h1>
    <h2>Show your creativity</h2>
    <div class="btn">
        <button id="create-post-btn" class="butn"><a class="butn" href="/new">Create New Post</a></button>
    </div>
    <ul>
        <div class="ul">
                <% posts.forEach((post, index) => { %>
                    <div class="li">
                        <li>
                            <h2><%= post.title %></h2>
                            <p><%= post.content %></p>
                            <button class="bt"><a href="/edit/<%= index %>">Edit</a></button>
                            <form action="/delete/<%= index %>" method="POST" style="display:inline;">
                                <button class="bt" type="submit">Delete</button>
                            </form>
                        </li>
                    </div>
                <% }) %>
            </ul>
    </section>
    <script>
         window.addEventListener("popstate", function() {
            document.body.classList.remove("fade-out");
            document.body.classList.add("fade-in");
        });
        document.getElementById("create-post-btn").addEventListener('click', function(e){
            e.preventDefault();
            document.body.classList.add("fade-out");
            setTimeout(()=>{
                window.location.href = "/new";
            }, 700);
        });

    </script>
</body>
</html>
